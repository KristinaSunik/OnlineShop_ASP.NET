@model List<Role>

<div class="row">
    @await Html.PartialAsync("LeftPanel")
    <div class="row-9">
        <h4>Роли</h4>
        <a class="btn btn-dark" asp-area="Admin" asp-controller="Role" asp-action="Add" aria-label="AddRole">Добавить роль</a>

        @if (Model.Count != 0)
        {
            int counter = 1;
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">№</th>
                        <th scope="col">Название</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                @foreach (var role in Model)
                {
                    <tbody>
                        <tr>
                            <th>@counter</th>
                            <td>@role.Name</td>
                            <td><a class="btn btn-dark" type="button" role="button" asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-roleName="@role.Name">Удалить</a></td>
                    </tbody>
                    counter++;
                }
            </table>
        }
    </div>
</div>




