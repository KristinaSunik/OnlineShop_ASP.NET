@model List<UserViewModel>

<div class="row">

    @await Html.PartialAsync("LeftPanel")

    @if (Model.Count != 0)
    {
        int counter = 1;

    <div class="row-9">
        <h4>Список пользователей</h4>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Логин</th>
                    <th scope="col">Пароль</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var user in Model)
            {
                <tbody>
                    <tr>
                        <th>@counter</th>
                        <td>@user.Login</td>
                        <td>@user.Password</td>
                        <td><a class="btn btn-light" type="button" role="button" asp-area="Admin" asp-controller="User" asp-action=Detail asp-route-userId="@user.Id">Подробнее</a></td>
                    </tr>
                </tbody>
                counter++;
            }
        </table>
    </div>
    }
    else
    {
        <div class="row-9">
            <h4>Пользователей нет</h4>
        </div>
    }
</div>
